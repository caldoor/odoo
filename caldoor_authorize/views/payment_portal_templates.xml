<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    <template id="pay_methods" name="Partner Payment Methods">
        <t t-call="portal.frontend_layout">
            <t t-set="additional_title">Partner Payment Methods</t>
            <div class="wrap">
                <div class="container">
                <div class="row">
                        <div class="col-md-6">
                            <ol class="breadcrumb mt8">
                                <li class="breadcrumb-item"><a href="/my/home"><i class="fa fa-home" role="img" aria-label="Home" title="Home"/></a></li>
                                <li class="breadcrumb-item">Partner Payment Methods</li>
                            </ol>
                        </div>
                    </div>
                    <div class="clearfix">
                        <div class="row">
                            <div class="col-md-8">
                                <h3>Manage your Payment Methods</h3>
                                <t t-call="payment.payment_tokens_list">
                                    <t t-set="acquirers" t-value="acquirers"/>
                                    <t t-set="mode" t-value="'manage'"/>
                                    <t t-set="partner_page" t-value="True"/>
                                    <t t-set="verify_validity" t-value="True"/>
                                </t>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>
    </data>
</odoo>