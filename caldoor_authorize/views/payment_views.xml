<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="acquirer_form_authorize_inherit_caldoor" model="ir.ui.view">
        <field name="name">acquirer.form.authorize.inherit.caldoor</field>
        <field name="model">payment.acquirer</field>
        <field name="inherit_id" ref="payment.acquirer_form"/>
        <field name="arch" type="xml">
            <xpath expr='//group[@name="acquirer_config"]//field[@name="journal_id"]' position='after'>
                <field name="convenience_fee_product_id" attrs="{'invisible': [('provider', '!=', 'authorize')]}"/>
                <field name="convenience_fee_percent" attrs="{'invisible': [('provider', '!=', 'authorize')]}"/>
            </xpath>
            <xpath expr="//field[@name='payment_flow']" position="after">
                <field name="restricted_group_ids" widget="many2many_tags"/>
            </xpath>
        </field>
    </record>

    <record id="view_payment_term_form_inherit_caldoor" model="ir.ui.view">
        <field name="name">account.payment.term.inherit.caldoor</field>
        <field name="model">account.payment.term</field>
        <field name="inherit_id" ref="account.view_payment_term_form"/>
        <field name="arch" type="xml">
            <field name="company_id" position="after">
                <field name="is_c50_term"/>
            </field>
        </field>
    </record>

    <record id="view_account_payment_form_inherited_caldoor_authorize" model="ir.ui.view">
        <field name="name">account.payment.form.inherited.caldoor_authorize</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='payment_method_id']" position="after">
                <field name="authorize_refund_transaction_id" attrs="{'invisible': ['|', ('payment_method_code', '!=', 'authorize_ct'), '|', ('partner_id', '=', False), ('payment_type', '=', 'transfer')], 'required': [('payment_method_code', '=', 'authorize_ct')], 'readonly': [('state', '!=', 'draft')]}" options="{'no_create': True}"/>
                <field name="authorize_payment_token_id" attrs="{'invisible': ['|', ('authorize_refund_transaction_id', '=', False), '|', ('payment_method_code', '!=', 'authorize_ct'), '|', ('partner_id', '=', False), ('payment_type', '=', 'transfer')]}" options="{'no_create': True}"/>
                <field name="payment_token_id" attrs="{'invisible': [('payment_method_code', '!=', 'electronic')], 'readonly': [('state', '!=', 'draft')]}" domain="[('partner_id', '=', partner_id)]" options="{'no_create': True}"/>
            </xpath>
        </field>
    </record>

    <record id="view_account_payment_invoice_form_inherited_caldoor_authorize" model="ir.ui.view">
        <field name="name">account.payment.invoice.form.inherited.caldoor_authorize</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_invoice_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='payment_method_id']" position="after">
                <field name="authorize_refund_transaction_id" attrs="{'invisible': ['|', ('payment_method_code', '!=', 'authorize_ct'), '|', ('partner_id', '=', False), ('payment_type', '=', 'transfer')], 'required': [('payment_method_code', '=', 'authorize_ct')], 'readonly': [('state', '!=', 'draft')]}" options="{'no_create': True}"/>
                <field name="authorize_payment_token_id" attrs="{'invisible': ['|', ('authorize_refund_transaction_id', '=', False), '|', ('payment_method_code', '!=', 'authorize_ct'), '|', ('partner_id', '=', False), ('payment_type', '=', 'transfer')]}" options="{'no_create': True}"/>
            </xpath>
        </field>
    </record>
</odoo>
