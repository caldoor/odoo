<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="invoice_form_caldoor" model="ir.ui.view">
            <field name="name">account.invoice.form.caldoor</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet//field[@name='partner_id']" position="attributes">
                    <attribute name="context">{'search_default_customer':1, 'show_address': 1, 'default_is_company': True, 'show_vat': True, 'show_attribute_inv':True}</attribute>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
