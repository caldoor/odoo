<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_move_form_caldoor" model="ir.ui.view">
            <field name="name">account.move.form.caldoor</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook/page//field[@name='line_ids']/tree/field[@name='partner_id']" position="attributes">
                    <attribute name="context">{'show_attribute':True}</attribute>
                </xpath>

                <xpath expr="//notebook/page//field[@name='line_ids']//form//field[@name='partner_id']" position="attributes">
                    <attribute name="context">{'show_attribute':True}</attribute>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
