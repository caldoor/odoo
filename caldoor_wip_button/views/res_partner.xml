<?xml version="1.0"?>
<data>
    <record id="res_partner_view_buttons_wip_status" model="ir.ui.view">
        <field name="name">res.partner.view.buttons.wip_status</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="sale.res_partner_view_buttons" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='sale_order_count']/ancestor-or-self::button" position="replace">
                <button type="action" class="oe_stat_button" icon="fa-usd" name="%(sale.act_res_partner_2_sale_order)d">
                    <div class="o_form_field o_stat_info">
                        <span class="o_stat_value">
                            <field name="sale_order_count" />
                            <span style="color:red;float:right;padding-left:0.5em" >
                            <field name="wip_status" widget='monetary' options="{'currency_field': 'currency_id'}"/>
                            </span>
                        </span>
                        <span class="o_stat_text">Open Orders</span>
                    </div>
                </button>
            </xpath>
        </field>
    </record>
</data>