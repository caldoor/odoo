<?xml version="1.0"?>
<data>
    <record id="res_partner_view_buttons_wip_status" model="ir.ui.view">
        <field name="name">res.partner.view.buttons.wip_status</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="sale.res_partner_view_buttons" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='sale_order_count']/ancestor-or-self::button" position="after">
                <button type="object" class="oe_stat_button" icon="fa-hourglass" name="action_view_wip">
                    <div class="o_form_field o_stat_info">
                        <span class="o_stat_value">
                            <field name="wip_status" widget='monetary' options="{'currency_field': 'currency_id'}"/>
                        </span>
                        <span class="o_stat_text">WIP Status</span>
                    </div>
                </button>
            </xpath>
        </field>
    </record>
</data>