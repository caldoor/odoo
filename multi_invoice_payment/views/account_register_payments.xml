<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<record id="view_account_payment_from_invoices_inherit_multi_invoice_payment " model="ir.ui.view">
		<field name="name">view.account.payment.from.invoices.inherit.multi_invoice_payment</field>
		<field name="model">account.register.payments</field>
		<field name="inherit_id" ref="account.view_account_payment_from_invoices"/>
		<field name="arch" type="xml">
			<xpath expr="//field[@name='payment_method_code']" position="after">
				<field name="payment_token_id" attrs="{'invisible': ['|', ('payment_method_code', '!=', 'electronic'), ('payment_type', '=', 'transfer')], 'required': [('payment_method_code', '=', 'electronic')]}"  options="{'no_create': True}"/>
			</xpath>
		</field>
	</record>
</odoo>