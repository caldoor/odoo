<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="account_payment_term_form_custom_caldoor" model="ir.ui.view">
        <field name="name">account.payment.term.form.custom.caldoor</field>
        <field name="model">account.payment.term</field>
        <field name="inherit_id" ref="account.view_payment_term_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form[1]/sheet[1]/group[1]/group[1]/field[@name='name']" position="after">
                <field name="x_termscode" help="This is the terms code in Passport"/>
            </xpath>
            <xpath expr="//field[@name='line_ids']" position="inside">
                <tree string="Payment Terms">
                    <field name="sequence" widget="handle"/>
                    <field name="value" string="Due Type"/>
                    <field name="value_amount" attrs="{'readonly':[('value','=','balance')]}"/>
                    <field name="days"/>
                    <field name="option" string=""/>
                    <field name="day_of_the_month" string="Day of the month"/>
                </tree>
            </xpath>
        </field>
    </record>


    <record id="account_payment_term_tree_custom_caldoor" model="ir.ui.view">
        <field name="name">account.payment.term.tree.custom.caldoor</field>
        <field name="model">account.payment.term</field>
        <field name="inherit_id" ref="account.view_payment_term_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree[1]/field[@name='name']" position="after">
                <field name="x_termscode"/>
            </xpath>
        </field>
    </record>
</odoo>