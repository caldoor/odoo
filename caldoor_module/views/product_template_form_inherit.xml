<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="product_template_form_custom_caldoor" model="ir.ui.view">
        <field name="name">product.template.form.custom.caldoor</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='expense_policy']" position="after">
                <field name="x_template_id"/>
                <field name="x_template_path"/>
            </xpath>
        </field>
    </record>
</odoo>