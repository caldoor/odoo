<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="delivery_carrier_form_custom_caldoor" model="ir.ui.view">
        <field name="name">delivery.carrier.form.custom.caldoor</field>
        <field name="model">delivery.carrier</field>
        <field name="inherit_id" ref="delivery.view_delivery_carrier_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form[1]/sheet[1]/group[1]/group[1]/label[1]" position="before">
                <field name="x_doorlister_code" string="Doorlister Code"/>
                <field name="x_doorlister_include_freight" string="Doorlister Include Freight"/>
            </xpath>
        </field>
    </record>


    <record id="delivery_carrier_tree_custom_caldoor" model="ir.ui.view">
        <field name="name">delivery.carrier.tree.custom.caldoor</field>
        <field name="model">delivery.carrier</field>
        <field name="inherit_id" ref="delivery.view_delivery_carrier_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree[1]/field[@name='name']" position="after">
                <field name="x_doorlister_code"/>
                <field name="x_doorlister_include_freight"/>
                <field name="fixed_price"/>
                <field name="product_id"/>
            </xpath>
        </field>
    </record>
</odoo>