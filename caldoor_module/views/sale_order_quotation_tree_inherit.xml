<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="sale_order_quotation_tree_custom_caldoor" model="ir.ui.view">
        <field name="name">sale.order.quotation.tree.custom.caldoor</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_quotation_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='user_id']" position="replace">
                <field name="team_id"/>
                <field name="x_category_id"/>
            </xpath>
            <xpath expr="//field[@name='expected_date']" position="replace"/>
            <xpath expr="//tree[1]/field[@name='name']" position="attributes">
                <attribute name="string">Job Number</attribute>
            </xpath>
            <xpath expr="//field[@name='date_order']" position="attributes">
                <attribute name="string">Order Date</attribute>
            </xpath>
            <xpath expr="//field[@name='commitment_date']" position="attributes">
                <attribute name="string">Ship Date</attribute>
            </xpath>
            <xpath expr="//field[@name='amount_total']" position="after">
                <field name="carrier_id"/>
                <field name="payment_term_id"/>
            </xpath>
        </field>
    </record>
</odoo>